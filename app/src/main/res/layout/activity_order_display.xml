<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".driver.activity.OrderDisplayActivity">

    <LinearLayout
        android:id="@+id/blockFieldOrderLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvProvider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:background="@color/greyLight2"
                android:gravity="center_horizontal"
                android:text="@string/t_provider"
                android:textColor="@color/blue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/titleOrderTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="@string/t_from"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/ibDisplayMapFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_image_button"
                    android:padding="3dp"
                    android:src="@drawable/ic_baseline_location_on_24"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvAddressDisplayOrderFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/greyLight1"
                android:gravity="center_horizontal"
                android:scrollbars="vertical"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/t_note" />

            <TextView
                android:id="@+id/tvNoteDisplayOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/greyLight1"
                android:gravity="center"
                android:scrollbars="vertical"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/t_to"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/displayMapToImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_image_button"
                    android:padding="3dp"
                    android:src="@drawable/ic_baseline_location_on_24"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvAddressDisplayTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/greyLight1"
                android:gravity="center_horizontal"
                android:scrollbars="vertical"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvTypeTr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/t_type"
                android:textColor="@color/design_default_color_error"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDisplayRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/t_rate"
                android:textColor="@color/design_default_color_error"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/distanceToOrderTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:text="@string/to_client"
                android:textColor="@color/design_default_color_error"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/acceptOrderDisplayButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_baseline_check_circle_24"
                android:text="@string/accept"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/notAcceptOrderDisplayButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_baseline_cancel_24"
                android:text="@string/refuse"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

