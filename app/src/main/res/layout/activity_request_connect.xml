<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".driver.activity.RequestConnectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/t_host"
            android:textColor="@color/colorDarkerAccent"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView39"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_emergency_24"
            android:text="@string/t_caption"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNameHostReq"
            style="@android:style/Widget.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/request_hint_load"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/t_driver"
            android:textColor="@color/colorDarkerAccent"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_emergency_24"
            android:text="@string/t_name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNameReq"
            style="@android:style/Widget.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/request_hint_load"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_emergency_24"
            android:text="@string/t_phone"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPhoneReq"
            style="@android:style/Widget.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/request_hint_load"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/t_transport"
            android:textColor="@color/colorDarkerAccent"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_emergency_24"
            android:text="@string/t_model"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvModelReq"
            style="@android:style/Widget.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ems="10"


            android:hint="@string/request_hint_load"
            android:paddingLeft="10dp"
            android:selectAllOnFocus="false"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_emergency_24"
            android:text="@string/color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvColorReq"
            style="@android:style/Widget.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ems="10"


            android:hint="@string/request_hint_load"
            android:paddingLeft="10dp"
            android:selectAllOnFocus="false"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_emergency_24"
            android:text="@string/t_reg_num"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRegNumReq"
            style="@android:style/Widget.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ems="10"


            android:hint="@string/request_hint_load"
            android:paddingLeft="10dp"
            android:selectAllOnFocus="false"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_emergency_24"
            android:text="@string/criteria_tr"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTypeTransport"
            style="@android:style/Widget.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/request_hint_load"
            android:padding="10dp"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/blockElConnReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_baseline_emergency_24"
                android:gravity="center_vertical"
                android:text="@string/t_dislocation"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvDislocationReq"
            style="@android:style/Widget.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingLeft="10dp"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCloseReq"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:text="@string/close"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnSendReq"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:text="@string/send"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
