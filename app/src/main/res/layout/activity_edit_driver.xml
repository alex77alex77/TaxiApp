<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".server.activity.EditDriverActivity">


    <LinearLayout
        android:id="@+id/blockElRegLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <TextView
            android:id="@+id/textViewTitleEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="@string/t_driver"
            android:textColor="@color/colorDarkerAccent"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTimeCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/textViewTitleNameReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_baseline_emergency_24"
            android:text="@string/t_name"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNameReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLength="15"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/textViewTitlePhoneReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t_phone"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPhoneReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:maxLength="20"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/textViewTitlePriorityReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t_priority"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPriorityReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0"
            android:inputType="number"
            android:maxLength="2"
            android:minHeight="48dp"
            android:text="0" />

        <TextView
            android:id="@+id/textViewTitleCallSignReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t_callsign"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCallSignReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_emergency_24"
            android:text="@string/t_deposit"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etDeposit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:minHeight="48dp"
            android:selectAllOnFocus="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t_additional"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etAdditionData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_additional"
            android:inputType="textMultiLine"
            android:maxLength="300"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/textViewTitleAutoReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/t_transport"
            android:textColor="@color/colorDarkerAccent"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewTitleTransportReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_emergency_24"
            android:text="@string/t_model"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etModelReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textViewTitleColorReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_emergency_24"
            android:text="@string/color"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etColorReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textViewTitleNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_emergency_24"
            android:text="@string/t_reg_num"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNumberReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_emergency_24"
            android:text="@string/t_dislocation"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDislocationRead"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:contextClickable="true"
                android:padding="5dp"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/ibSelDislocReg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/custom_image_button"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_baseline_location_on_24" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewTitleTypeTransportReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_emergency_24"
            android:text="@string/t_criteria"
            android:textStyle="bold" />

        <com.alexei.taxiapp.MultiSpinner
            android:id="@+id/mSpinnerTypeTrans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/listTypeTransport" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSaveReg"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>