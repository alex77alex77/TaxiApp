<?xml version="1.0" encoding="UTF-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTimeCreatedOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="3dp"
            android:text="00:00:00"
            android:textColor="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/greyLight2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFreeOrderAddressFrom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="@string/t_from" />

            <TextView
                android:id="@+id/tvShowDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/custom_image_button3"
                android:backgroundTint="@color/greyLight1"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:padding="6dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/greyLight1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFreeOrderAddressTo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="@string/t_to" />

            <TextView
                android:id="@+id/tvShowDot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/custom_image_button3"
                android:backgroundTint="@color/greyLight1"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:padding="6dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvFreeOrderType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/greyLight2"
            android:padding="3dp"
            android:text="Тип:"
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/tvRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/greyLight1"
            android:padding="3dp"
            android:text="@string/t_rate"
            android:textColor="@android:color/holo_red_dark" />


        <LinearLayout
            android:id="@+id/block3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/greyLight2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_red_dark" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                app:borderWidth="1dp"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_baseline_check_24" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>